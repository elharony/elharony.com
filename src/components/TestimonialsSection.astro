    // Shuffle function to randomize testimonials order
    /** @param {any[]} arr */
    function shuffleArray(arr) {
      const shuffled = arr.slice();
      for (let i = shuffled.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [shuffled[i], shuffled[j]] = [shuffled[j], shuffled[i]];
      }
      return shuffled;
    }

    // Shuffle testimonials on each page load
    const shuffledTestimonials = shuffleArray(testimonials);

    const slider = document.getElementById('mobile-slider');
    const desktopList = document.querySelector('.testimonials-list');
    const prevBtn = document.getElementById('prev-btn');
    const nextBtn = document.getElementById('next-btn');
    let currentSlide = 0;

    /** @param {{text:string,author:string,role:string,photo?:string}} testimonial @param {boolean=} isMobile */
    function createTestimonialCard(testimonial, isMobile = false) {
      const card = document.createElement('article');
      card.className = isMobile ? "w-full flex-shrink-0 px-2" : "testimonial bg-white rounded-2xl p-8 border border-[#f0f0f0] hover:border-[#e0e0e0] hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 group";
      
      // Add inline styles for column break behavior
      if (!isMobile) {
        card.style.marginBottom = "1rem";
        card.style.breakInside = "avoid";
        card.style.setProperty('-webkit-column-break-inside', 'avoid');
        card.style.pageBreakInside = "avoid";
      }
      /** @param {string} name */
      function getInitials(name) {
        const parts = name.split(' ').filter(Boolean);
        let initials = '';
        for (let i = 0; i < parts.length; i++) {
          if (parts[i] && parts[i][0]) initials += parts[i][0];
          if (initials.length >= 2) break;
        }
        return initials.toUpperCase();
      }
      
