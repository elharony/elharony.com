            ${testimonial.text}
          </blockquote>
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-3">
              <div class="w-10 h-10 rounded-full overflow-hidden flex items-center justify-center">
                ${testimonial.photo 
                  ? `<img src="${testimonial.photo}" alt="${testimonial.author}" class="w-full h-full object-cover"/>`
                  : `<div class=\"w-full h-full bg-gradient-to-br from-[#3212d3] to-[#1e1b69] flex items-center justify-center\"><span class=\"text-white font-semibold text-xs\">${getInitials(testimonial.author)}</span></div>`}
              </div>
              <div>
                <div class="font-semibold text-[#1a1a1a] text-sm">${testimonial.author}</div>
                <div class="text-[#6b7280] text-xs">${testimonial.role}</div>
              </div>
            </div>
            ${testimonial.linkedin ? `
              <a href="${testimonial.linkedin}" target="_blank" rel="noopener noreferrer" aria-label="View ${testimonial.author} on LinkedIn" class="ml-4">
                <img src="/icons/linkedin.svg" alt="LinkedIn" style="width: 32px; height: 32px;" />
              </a>` : ''}
          </div>
        </article>
      ` : `
        <div class="w-12 h-12 bg-[#f8f9ff] rounded-xl flex items-center justify-center mb-6 group-hover:bg-[#3212d3] transition-colors duration-300">
          <svg class="w-6 h-6 text-[#3212d3] group-hover:text-white transition-colors duration-300" fill="currentColor" viewBox="0 0 24 24">
            <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h4v10h-10z"/>
          </svg>
        </div>
        <blockquote class="text-[#1a1a1a] mb-8 leading-relaxed text-base font-medium">
          ${testimonial.text}
        </blockquote>
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-4">
            <div class="w-12 h-12 rounded-full overflow-hidden flex items-center justify-center">
              ${testimonial.photo 
                ? `<img src="${testimonial.photo}" alt="${testimonial.author}" class="w-full h-full object-cover"/>`
                : `<div class=\"w-full h-full bg-gradient-to-br from-[#3212d3] to-[#1e1b69] flex items-center justify-center\"><span class=\"text-white font-semibold text-sm\">${getInitials(testimonial.author)}</span></div>`}
            </div>
            <div>
              <div class="font-semibold text-[#1a1a1a] text-sm">${testimonial.author}</div>
              <div class="text-[#6b7280] text-xs">${testimonial.role}</div>
            </div>
          </div>
          ${testimonial.linkedin ? `
            <a href="${testimonial.linkedin}" target="_blank" rel="noopener noreferrer" aria-label="View ${testimonial.author} on LinkedIn" class="ml-6">
              <img src="/icons/linkedin.svg" alt="LinkedIn" style="width: 32px; height: 32px;" />
            </a>` : ''}
        </div>
      `;
      
      card.innerHTML = cardContent;
      return card;
    }

    function renderMobileSlider() {
      if (!slider) return;
      slider.innerHTML = '';
      shuffledTestimonials.forEach((testimonial) => {
        const card = createTestimonialCard(testimonial, true);
        slider.appendChild(card);
      });
    }

    function renderDesktopList() {
      if (!desktopList) return;
      desktopList.innerHTML = '';
      shuffledTestimonials.forEach((testimonial) => {
        const card = createTestimonialCard(testimonial, false);
        desktopList.appendChild(card);
      });
    }

    function updateSlider() {
      if (!slider) return;
      const translateX = -currentSlide * 100;
      slider.style.transform = `translateX(${translateX}%)`;
    }

    function nextSlide() {
      currentSlide = (currentSlide + 1) % shuffledTestimonials.length;
      updateSlider();
    }

    function prevSlide() {
      currentSlide = (currentSlide - 1 + shuffledTestimonials.length) % shuffledTestimonials.length;
      updateSlider();
    }

    // Initialize both mobile slider and desktop list
    renderMobileSlider();
    renderDesktopList();

    // Event listeners for mobile slider
    if (nextBtn && prevBtn) {
      nextBtn.addEventListener('click', nextSlide);
      prevBtn.addEventListener('click', prevSlide);
    }

    // Auto-play for mobile slider
    if (slider) {
      setInterval(nextSlide, 4000);
    }
  });
</script>
