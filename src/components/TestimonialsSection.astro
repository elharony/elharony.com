---
// Testimonials section component
---

<section class="section-padding bg-white">
  <div class="container mx-auto px-6 mb-20">
    <div class="text-center">
      <h2 class="text-4xl md:text-5xl font-bold text-[#1a1a1a] mb-6">
        Trusted by Teams, Founders, and Developers Worldwide
      </h2>
      <p class="text-xl text-[#6b7280] max-w-3xl mx-auto leading-relaxed">
        Real words from people I've helped build, grow, and succeed.
      </p>
    </div>
  </div>
  
  <!-- Mobile Slider (hidden on tablet+) -->
  <div class="md:hidden px-4">
    <div class="testimonials-slider overflow-hidden">
      <div class="testimonials-track flex transition-transform duration-300 ease-in-out" id="mobile-slider">
        <!-- Mobile testimonials will be populated by JavaScript -->
      </div>
    </div>
    <!-- Slider controls -->
    <div class="flex justify-center mt-6 space-x-4">
      <button id="prev-btn" class="w-10 h-10 bg-[#3212d3] text-white rounded-full flex items-center justify-center hover:bg-[#1e1b69] transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
      </button>
      <button id="next-btn" class="w-10 h-10 bg-[#3212d3] text-white rounded-full flex items-center justify-center hover:bg-[#1e1b69] transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </button>
    </div>
  </div>
  
  <!-- Desktop/Tablet Columns (hidden on mobile) -->
  <div class="testimonials hidden md:block">
    <div class="testimonials-list px-6">
      <!-- All testimonials will be populated by JavaScript -->
    </div>
  </div>
</section>


<style>
  /* Global testimonial styles - highest priority */
  article.testimonial {
    margin-bottom: 1rem !important;
    break-inside: avoid !important;
    -webkit-column-break-inside: avoid !important;
    page-break-inside: avoid !important;
  }
  
  .testimonial {
    margin-bottom: 1rem !important;
    break-inside: avoid !important;
    -webkit-column-break-inside: avoid !important;
    page-break-inside: avoid !important;
  }
  /* Desktop/Tablet Columns */
  .testimonials .testimonials-list {
    column-count: 2;
    column-gap: 2rem;
  }

  @media (min-width: 1024px) {
    .testimonials .testimonials-list {
      column-count: 3;
    }
  }

  @media (min-width: 1280px) {
    .testimonials .testimonials-list {
      column-count: 4;
    }
  }

  /* Testimonial cards - multiple selectors for dynamic content */
  .testimonials .testimonials-list .testimonial,
  .testimonials .testimonials-list article.testimonial,
  .testimonials-list .testimonial,
  .testimonials-list article.testimonial,
  .testimonials-list article {
    margin: 0 0 1rem !important;
    break-inside: avoid !important;
    -webkit-column-break-inside: avoid !important;
    page-break-inside: avoid !important;
  }

  .testimonial {
    transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .testimonial:hover {
  
  /* Force column break styles with high specificity */
  .testimonials-list article.testimonial,
  .testimonials-list .testimonial {
    margin-bottom: 1rem !important;
    break-inside: avoid !important;
    -webkit-column-break-inside: avoid !important;
    page-break-inside: avoid !important;
  }
  
  /* Additional targeting for dynamically created elements */
  .testimonials .testimonials-list > article,
  .testimonials .testimonials-list > .testimonial {
    margin-bottom: 1rem !important;
    break-inside: avoid !important;
    -webkit-column-break-inside: avoid !important;
    page-break-inside: avoid !important;
  }
    transform: translateY(-8px) scale(1.02);
  }

  /* Mobile Slider */
  .testimonials-slider {
    width: 100%;
  }
  
  .testimonials-track {
    display: flex;
    width: calc(100% * 22); /* 22 testimonials */
  }
</style>
